@model List<Company>
<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h1 class="text-primary">Company List</h1>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="las la-plus-circle"></i> Add Company
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
				<th>Name</th>
				<th>Address</th>
				<th>City</th>
				<th>State</th>
				<th>Phone Number</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td>@obj.Name</td>
                    <td>@obj.StreetAddress</td>
                    <td>@obj.City</td>
                    <td>@obj.State</td>
                    <td>@obj.PhoneNumber</td>
                    <td>
                        <div class="btn-group" role="group">
                            <a asp-controller="MenuItem" asp-action="Upsert" asp-route-id="@obj.Id" class="btn btn-sm btn-primary d-flex align-items-center mx-2">
                                <i class="lar la-edit"></i> Edit
                            </a>
							<a asp-controller="MenuItem" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-sm btn-danger d-flex align-items-center mx-2">
                                <i class="las la-trash-alt"></i> Delete
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
