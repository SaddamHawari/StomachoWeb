@model Company

<div class="card shadow border-0 mt-4">
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="row pb-2">
                <h2 class="text-black ml-3">
                    Delete Company
                </h2>
            </div>
            <div class="row">
                <div class="col-12">
                    <div class=" p-3 mt-4">
                        <div class="form-floating py-2 col-12">
                            <label asp-for="Name" class="ms-2"></label>
                            <input asp-for="Name" class="form-control border-0 shadow" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="PhoneNumber" class="ms-2"></label>
                            <input asp-for="PhoneNumber" class="form-control border-0 shadow" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="City" class="ms-2"></label>
                            <input asp-for="City" class="form-check-inline border-1 shadow" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="State" class="ms-2"></label>
                            <input asp-for="State" class="form-check-inline border-1 shadow" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="StreetAddress" class="ms-2"></label>
                            <input asp-for="StreetAddress" class="form-check-inline border-1 shadow" />
                        </div>
                        <div class="form-floating py-2 col-12">
                            <label asp-for="PostalCode" class="ms-2"></label>
                            <input asp-for="PostalCode" class="form-check-inline border-1 shadow" />
                        </div>
                        <div class="row pt-2">
                            <div class="col-12 col-md-3">
                                <button type="submit" class="btn btn-danger form-control">Delete</button>
                            </div>
                            <div class="col-12 col-md-3">
                                <a asp-controller="Company" asp-action="Index" class="btn btn-outline-primary border  form-control">
                                    Back to List
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>