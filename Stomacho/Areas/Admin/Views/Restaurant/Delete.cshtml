@model Restaurant

<div class="card shadow border-0 mt-4">
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="row pb-2">
                <h2 class="text-black ml-3">
                    Delete Restaurant
                </h2>
            </div>
            <div class="border p-3 mt-4">
                <div class="form-floating py-2 col-6">
                    <label asp-for="Name" disabled class="ms-2"></label>
                    <input asp-for="Name" class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Cuisine" disabled class="ms-2"></label>
                    <input asp-for="Cuisine" class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="Location" disabled class="ms-2"></label>
                    <input asp-for="Location" class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="ImageUrl" disabled class="ms-2"></label>
                    <input type="file" name="file" class="form-control border-0 shadow" />
                </div>
                <div class="form-floating py-2 col-6">
                    <label asp-for="IsActive" disabled class="ms-2"></label>
                    <input asp-for="IsActive" class="form-control border-0 shadow" />
                </div>
                @* <div class="form-floating py-2 col-6">
                    <label asp-for="Rating" disabled class="ms-2"></label>
                    <input asp-for="Rating" class="form-control border-0 shadow" />
                </div> *@
                <div class="row pt-2">
                    <div class="col-6 col-md-3">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Restaurant" asp-action="Index" class="btn btn-outline-primary border  form-control">
                            Back to List
                        </a>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
