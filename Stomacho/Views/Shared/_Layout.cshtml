<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">
    <meta name="author" content="TechyDevs">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Stomacho - Order from Best Restaurants</title>
    <!-- Favicon -->
    <link rel="icon" href="~/dist/images/favicon.png">

    <!-- Google Fonts -->
    <link href="../../../../../../fonts.googleapis.com/css2bff7.css?family=Roboto:wght@100;300;400;500;700;900&amp;display=swap" rel="stylesheet">

    <!-- Template CSS Files -->
    <link rel="stylesheet" href="~/themes/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/themes/css/bootstrap-select.min.css">
    <link rel="stylesheet" href="~/themes/css/line-awesome.css">
    <link rel="stylesheet" href="~/themes/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/themes/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/themes/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/themes/css/daterangepicker.css">
    <link rel="stylesheet" href="~/themes/css/animate.min.css">
    <link rel="stylesheet" href="~/themes/css/animated-headline.css">
    <link rel="stylesheet" href="~/themes/css/jquery-ui.css">
    <link rel="stylesheet" href="~/themes/css/flag-icon.min.css">
    <link rel="stylesheet" href="~/themes/css/style.css">
    <link rel="stylesheet" href="https://maxst.icons8.com/vue-static/landings/line-awesome/line-awesome/1.3.0/css/line-awesome.min.css">
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
</head>
<body>
    <!-- start cssload-loader --> 
    <div class="preloader" id="preloader">
        <div class="loader">
            <svg class="spinner" viewBox="0 0 50 50">
                <circle class="path" cx="25" cy="25" r="20" fill="none" stroke-width="5"></circle>
            </svg>
        </div>
    </div>
    <!-- end cssload-loader -->

    <!-- ================================
    START HEADER AREA
    ================================= -->
    <header class="header-area">
        <div class="header-top-bar padding-right-100px padding-left-100px">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-lg-6">
                        <div class="header-top-content">
                            <div class="header-left">
                                <ul class="list-items">
                                    <li><a href="#"><i class="la la-phone mr-1"></i>+977-9746552813</a></li>
                                    <li><a href="#"><i class="la la-envelope mr-1"></i>stomachofastfood@gmail.com</a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="header-top-content">
                            <div class="header-right d-flex align-items-center justify-content-end">
                                <div class="header-right-action">
                                    <div class="select-contain select--contain w-auto">
                                        <select class="select-contain-select">
                                            <option class="flag-icon flag-icon-us mr-1">English US</option>
                                            <option class="flag-icon flag-icon-gb-eng mr-1">English UK</option>
                                            <option class="flag-icon flag-icon-in mr-1">Hindi</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="header-right-action">
                                    <div class="select-contain select--contain w-auto">
                                        <select class="select-contain-select">
                                            <option value="1">NPR</option>
                                            <option value="2">USD</option>
                                            <option value="3">INR</option>
                                        </select>
                                    </div>
                                </div>
                                <div class="header-right-action d-flex align-items-center ms-3">
                                    <partial name="_LoginPartial" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="header-menu-wrapper padding-right-100px padding-left-100px " style="background-color: #ebce95;">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="menu-wrapper">
                            <a href="#" class="down-button"><i class="la la-angle-down"></i></a>
                            <div class="logo">
                                <a asp-area="Customer" asp-controller="Home" asp-action="Index"><img src="~/dist/images/stomachoogo.png" alt="logo"></a>
                                <div class="menu-toggler">
                                    <i class="la la-bars"></i>
                                    <i class="la la-times"></i>
                                </div><!-- end menu-toggler -->
                            </div><!-- end logo -->
                            <div class="main-menu-content">
                                <nav>
                                    <ul>
                                        <li>
                                            <a class="dropdown-item" asp-area="Customer" asp-controller="Home" asp-action="Index">Home</a>
                                        </li>
                                        <li>
                                            <a class="dropdown-item" asp-area="Customer" asp-controller="Cart" asp-action="Index">
                                                <i class="las la-shopping-cart"></i> &nbsp;
                                            </a>
                                        </li>

                                        <li>
                                            @if (User.IsInRole(SD.Role_Admin))
                                            {
                                                <a href="#">Restaurant Management  <i class="la la-angle-down"></i></a>
                                                <ul class="dropdown-menu-item">
                                                    <li>
                                                        <a class="dropdown-item" asp-area="Admin" asp-controller="Restaurant" asp-action="Index">Restaurant</a>
                                                    </li>
                                                    <li>
                                                        <a class="dropdown-item" asp-area="Admin" asp-controller="MenuItem" asp-action="Index">MenuItem</a>
                                                    </li>
                                                </ul>
                                            }
                                        </li>
                                    </ul>
                                </nav>
                            </div><!-- end main-menu-content -->
                            <div class="nav-btn">
                                <a href="become-local-expert.html" class="theme-btn">Become Local Expert</a>
                            </div><!-- end nav-btn -->
                        </div><!-- end menu-wrapper -->
                    </div><!-- end col-lg-12 -->
                </div><!-- end row -->
            </div><!-- end container-fluid -->
        </div><!-- end header-menu-wrapper -->
    </header>
    <!-- ================================
             END HEADER AREA
    ================================= -->

    <div class="section">
        <main role="main" class="pb-3">
            <partial name="_Notification" ? />
            @RenderBody()
        </main>
    </div>

    <script src="~/themes/js/jquery-3.4.1.min.js"></script>
	<script src="~/themes/js/jquery-3.4.1.min.js"></script>
    <script src="~/themes/js/jquery-ui.js"></script>
    <script src="~/themes/js/popper.min.js"></script>
    <script src="~/themes/js/bootstrap.min.js"></script>
    <script src="~/themes/js/bootstrap-select.min.js"></script>
    <script src="~/themes/js/moment.min.js"></script>
    <script src="~/themes/js/daterangepicker.js"></script>
    <script src="~/themes/js/owl.carousel.min.js"></script>
    <script src="~/themes/js/jquery.fancybox.min.js"></script>
    <script src="~/themes/js/jquery.countTo.min.js"></script>
    <script src="~/themes/js/animated-headline.js"></script>
    <script src="~/themes/js/jquery.ripples-min.js"></script>
    <script src="~/themes/js/quantity-input.js"></script>
    <script src="~/themes/js/main.js"></script>
    <script src="https://cdn.tiny.cloud/1/57cl7iaaru13ju3myk8jnmsmoy3zncqnl3jwmsjwlaijel0o/tinymce/7/tinymce.min.js" referrerpolicy="origin"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
