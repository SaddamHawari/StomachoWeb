@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item d-flex align-items-center p-2">
            <span class="fw-bold me-3 px-2">
                <a id="manage" class="nav-link " asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @UserManager.GetUserName(User)!</a>
            </span>
            <form asp-area="Identity" asp-page="/Account/Logout" method="post" id="logoutForm" class="d-flex align-items-center" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-primary px-3 py-2 ms-3">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item d-flex align-items-center p-2">
            <a asp-area="Identity" id="register" asp-page="/Account/Register" class="btn btn-outline-primary mx-2 px-3 py-2">Register</a>
            <a asp-area="Identity" id="login" asp-page="/Account/Login" class="btn btn-primary mx-2 px-3 py-2">Login</a>
        </li>
    }
</ul>
